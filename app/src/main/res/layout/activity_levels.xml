<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_levels_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context="by.thedrop.materialquestredesigned.Activities.LevelsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/levels_activity_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/levels_activity_label"
        android:layout_margin="8dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/levels_activity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/levels"
        android:textSize="34sp"/>
</RelativeLayout>
