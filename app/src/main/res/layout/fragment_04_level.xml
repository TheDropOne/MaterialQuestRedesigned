<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/level_4_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/level_4_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/level_is"
            android:textColor="@color/buttonGrey"
            android:textSize="22sp"
            />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/level_4_refresh_layout"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/level_4_name"
            android:layout_margin="16dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/level_4_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </android.support.v4.widget.SwipeRefreshLayout>

        <ImageView
            android:id="@+id/level_4_next"
            android:layout_width="74dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:alpha="0.4"
            android:scaleType="fitCenter"
            android:src="@drawable/next_white"/>

        <TextView
            android:id="@+id/level_4_passed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/level_passed"
            android:textSize="30sp"
            />
    </RelativeLayout>
</RelativeLayout>